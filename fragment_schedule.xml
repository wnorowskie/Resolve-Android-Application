<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/prevDayButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:background="@drawable/left_arrow"
            android:text="@null" />

        <TextView
            android:id="@+id/dayText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:gravity="center"
            android:text="@string/mondayDayLabel"
            android:textSize="35sp" />

        <Button
            android:id="@+id/nextDayButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:background="@drawable/right_arrow"
            android:text="@null" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/eventListScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="true"
        android:longClickable="true"
        android:overScrollMode="always"
        android:scrollY="600dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5">

        <LinearLayout
            android:id="@+id/eventListContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/hourList"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/hourText0"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center_horizontal"
                    android:text="12 AM"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/hourText1"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center_horizontal"
                    android:text="1 AM"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/hourText2"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center_horizontal"
                    android:text="2 AM"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/hourText3"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center_horizontal"
                    android:text="3 AM"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/hourText4"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center_horizontal"
                    android:text="4 AM"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/hourText5"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center_horizontal"
                    android:text="5 AM"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/hourText6"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center_horizontal"
                    android:text="6 AM"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/hourText7"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center_horizontal"
                    android:text="7 AM"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/hourText8"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center_horizontal"
                    android:text="8 AM"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/hourText9"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center_horizontal"
                    android:text="9 AM"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/hourText10"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center_horizontal"
                    android:text="10 AM"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/hourText11"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center_horizontal"
                    android:text="11 AM"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/hourText12"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center_horizontal"
                    android:text="12 PM"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/hourText13"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center_horizontal"
                    android:text="1 PM"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/hourText14"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center_horizontal"
                    android:text="2 PM"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/hourText15"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center_horizontal"
                    android:text="3 PM"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/hourText16"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center_horizontal"
                    android:text="4 PM"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/hourText17"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center_horizontal"
                    android:text="5 PM"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/hourText18"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center_horizontal"
                    android:text="6 PM"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/hourText19"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center_horizontal"
                    android:text="7 PM"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/hourText20"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center_horizontal"
                    android:text="8 PM"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/hourText21"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center_horizontal"
                    android:text="9 PM"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/hourText22"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center_horizontal"
                    android:text="10 PM"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/hourText23"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center_horizontal"
                    android:text="11 PM"
                    android:textSize="15sp" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/eventListLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/schedule_background">

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>